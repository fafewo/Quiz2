<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/your_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="please enter your name"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="questions are below "
            android:textSize="20sp"
            android:textColor="#1a237e"
            />

        <TextView
            style="@style/QuestionText"
            android:text="1)F=?" />


        <RadioGroup
            android:id="@+id/rdGroupA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/button1a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="=m*a"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/button2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="=R*I"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/button3a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="=m*L"
                android:textSize="20sp" />
        </RadioGroup>

        <TextView
            style="@style/QuestionText"
            android:text="2) on the following  picture is  a ..." />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/wind"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:paddingRight="40dp"
                android:src="@drawable/wind"

                />

            <RadioGroup
                android:id="@+id/rdGroupX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/wind">

                <RadioButton
                    android:id="@+id/button2x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="windmill"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/button1x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="windturbine"
                    android:textSize="20sp" />
            </RadioGroup>

        </RelativeLayout>

        <TextView
            style="@style/QuestionText"
            android:text="3) what does 'Vorsicht vor der LÃ¼cke' mean ?" />

        <RadioGroup
            android:id="@+id/rdGroupB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <RadioButton
                android:id="@+id/button1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="watch out"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/button2b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="mind the gap"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/button3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="attention"
                android:textSize="20sp" />
        </RadioGroup>

        <TextView
            style="@style/QuestionText"
            android:text="4) a good coffee contains:" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/box1_quest4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="whipped cream"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/box2_quest4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chocolate"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/box3_quest4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="salt"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            style="@style/QuestionText"
            android:text="5) what does 'Schmetterling' mean?" />

        <RadioGroup
            android:id="@+id/rdGroupC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <RadioButton
                android:id="@+id/button1c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fly"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/button2c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bird"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/button3c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="butterfly"
                android:textSize="20sp" />
        </RadioGroup>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="your results"
            android:textSize="20sp"
            android:textColor="#1a237e"
            android:textAllCaps="true"
            android:paddingTop="30dp"
            />

        <TextView
            android:id="@+id/textView_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="0 points"
            android:textSize="20sp"
            android:textColor="#00251a"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="getResults"
            android:paddingBottom="50dp"
            android:paddingTop="20dp"
            android:text="get results"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="makeReset"
            android:paddingBottom="50dp"
            android:paddingTop="20dp"
            android:text="reset"/>


    </LinearLayout>

</ScrollView>
